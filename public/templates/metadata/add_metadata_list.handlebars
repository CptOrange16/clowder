<form class="form-horizontal">
    <div class="form-group">
        <label for="field-value" class="col-sm-2 control-label" title="{{field_id}}">
            <strong>{{field_label}}</strong>
        </label>
        <div class="col-sm-8">
            <select id="metadata-list-select">
                {{#each options}}<option>{{this}}</option>{{/each}}
            </select>
        </div>
        <div class="col-sm-2">
            <button id="add-metadata-button" type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>